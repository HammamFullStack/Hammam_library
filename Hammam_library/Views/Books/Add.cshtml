@model Books
@{
    ViewData["Title"] = "Add a Book";
}


<form class="form-width" asp-action="Add" asp-controller="Books" method="post">

    <div class="form-group">
        <label asp-for="Title">Book Title</label>
        <input class="form-control" asp-for="Title" type="text" name="Title" />
    </div>
    <div class="form-group">
        <label asp-for="Edition">Book Edition</label>
        <input class="form-control" asp-for="Edition" type="text" name="Edition" />

    </div>
    <div class="form-group">
        <label asp-for="AuthorID"> Book Author </label>
        <select class="form-control" asp-for="AuthorID">
            <option value="" hidden disabled selected>Please Select an Author</option>
            @foreach (Authors author in ViewBag.Authors)
            {
                <option value="@author.AuthorID">@author.AuthorName</option>
            }
        </select>
    </div>

    <br />
    <button type="submit" class="btn btn-success">Add Book</button>
    <br />
    <br />
    <a class="btn btn-outline-danger" asp-controller="Books" asp-action="Index">Cancel</a>
</form>